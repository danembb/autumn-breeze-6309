<h1>Flights Index</h1>

<% @flights.each do |flight| %>
<div id="flight-<%= flight.id %>">
  <h3>Flight #<%= flight.number %>, <%= flight.airline.name %></h3>
  <% flight.passengers.each do |passenger| %>
    <div id="passenger-<%= passenger.id %>">
      <p>Passenger Name: <%= passenger.name %></p>
      <%= link_to 'Remove Passenger', trip_path(id: passenger.id, flight_id: flight.id), method: :delete %>
    </div>
  <% end %>
</div>
<% end %>
